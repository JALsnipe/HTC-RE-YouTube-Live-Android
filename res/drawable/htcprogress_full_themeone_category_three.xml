<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@*android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/progress_track_start_color" />
            <size android:height="@dimen/htc_progressbar_height" />
        </shape>
    </item>
    <item android:id="@*android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/progress_track_center_color" />
                <size android:height="@dimen/htc_progressbar_height" />
            </shape>
        </clip>
    </item>
    <item android:id="@*android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#ffffa391" />
                <size android:height="@dimen/htc_progressbar_height" />
            </shape>
        </clip>
    </item>
</layer-list>