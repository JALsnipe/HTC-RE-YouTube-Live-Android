    <ImageView android:id="@id/delete_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/re_gridview_select" android:layout_centerInParent="true" />
    <ImageView android:id="@id/check_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/spacing" android:layout_marginBottom="@dimen/spacing" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" />
</RelativeLayout>