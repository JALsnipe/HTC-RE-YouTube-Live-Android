        <ImageButton android:id="@id/cancel" android:layout_width="@dimen/gc_ntf_button_size" android:layout_height="@dimen/gc_ntf_control_button_height" android:src="@drawable/icon_btn_cancel_dark" style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>
</LinearLayout>